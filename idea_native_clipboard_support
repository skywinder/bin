if grep "ide.mac.useNativeClipboard=" idea.properties > /dev/null
then

	if grep "ide.mac.useNativeClipboard=false" idea.properties > /dev/null
	then
		echo "ide.mac.useNativeClipboard=false found -> change to true"
		sed -i .bak 's/ide.mac.useNativeClipboard=false/ide.mac.useNativeClipboard=true/g' idea.properties
	else
		if grep "ide.mac.useNativeClipboard=true" idea.properties > /dev/null
		then
			echo "ide.mac.useNativeClipboard=true found -> nothing to change"
		fi
	fi
else
	echo "ide.mac.useNativeClipboard=false not found -> add string ide.mac.useNativeClipboard=true to the end of file"
	echo "ide.mac.useNativeClipboard=true" >> idea.properties
fi
